<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/fondo" >
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="46dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/c_black"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:paddingLeft="15dp"
                android:src="@drawable/color_black" />
            <ImageView
                android:id="@+id/c_blue"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_blue" />
            <ImageView
                android:id="@+id/c_cyan"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_cyan" />

            <ImageView
                android:id="@+id/c_darkgray"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_darkgray" />

            <ImageView
                android:id="@+id/c_gray"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_gray" />

            <ImageView
                android:id="@+id/c_lightgray"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_lightgray" />

            <ImageView
                android:id="@+id/c_magenta"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_magenta" />

            <ImageView
                android:id="@+id/c_red"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_red" />

            <ImageView
                android:id="@+id/c_verde"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_verde" />

            <ImageView
                android:id="@+id/c_white"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_white" />

            <ImageView
                android:id="@+id/c_yellow"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:src="@drawable/color_yellow" />
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/LayoutBurbuja"
	    android:layout_width="wrap_content"	    
	    android:layout_height="wrap_content"	    
	    android:layout_centerHorizontal="true"	    
	    android:orientation="horizontal">
	    <EditText
	        android:id="@+id/Burbuja"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="250dp"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="54dp"        
	        android:inputType="textMultiLine" >
	        <requestFocus />
	    </EditText>
    </RelativeLayout>

	<LinearLayout
	    android:id="@+id/cuadro"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/espacio1"
        android:layout_marginTop="64dp"
        android:text="   Ingresa el texto:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="@android:dimen/app_icon_size" />
    </LinearLayout>

    <Button
        android:id="@+id/textoAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"        
        android:text="Elegir"
        android:textSize="30dp" />

</RelativeLayout>