<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@layout/fondo"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:gravity="left"
        android:text="@string/post_ins"
        android:textColor="#fff"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/txtMensaje"
        android:layout_width="398dp"
        android:layout_height="170dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="@string/msg" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMensaje"
        android:layout_below="@+id/txtMensaje"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:text="@string/status"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtStatus"
        android:layout_alignBottom="@+id/txtStatus"
        android:layout_alignRight="@+id/txtMensaje"
        android:text="@string/post" />

    <Button
        android:id="@+id/btnReadA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/readA" />

    <CheckBox
        android:id="@+id/twitterCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnReadA"
        android:layout_below="@+id/btnReadA"
        android:layout_marginTop="51dp"
        android:button="@drawable/twitter_check"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/twitter"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnReadA"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/button1"
        android:src="@drawable/twitter" />

</RelativeLayout>